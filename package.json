{
  "name": "vite-plugin-eslint",
  "version": "1.1.0",
  "description": "ESLint plugin for vite.",
  "author": "James Gao",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "workspaces": [
    ".",
    "example"
  ],
  "scripts": {
    "commit": "cz",
    "dev": "npm run build -- --watch",
    "lint": "eslint src",
    "example:dev": "npm -C example run dev",
    "example:build": "npm -C example run build",
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "prepublishOnly": "npm run build",
    "release": "standard-version"
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin main && npm publish"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "eslint",
    "vite-plugin"
  ],
  "homepage": "https://github.com/gxmari007/vite-plugin-eslint",
  "repository": "git+https://github.com:gxmari007/vite-plugin-eslint.git",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@rollup/pluginutils": "^4.1.0",
    "eslint": "^7.21.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/eslint": "^7.2.6",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "4",
    "prettier": "^2.2.1",
    "rollup": "^2.40.0",
    "standard-version": "^9.1.1",
    "tsup": "^4.6.1",
    "typescript": "^4.2.2",
    "vite": "^2.0.5"
  },
  "peerDependencies": {
    "vite": "^2.0.1"
  }
}
